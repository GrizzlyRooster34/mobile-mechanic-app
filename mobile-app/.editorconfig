# EditorConfig for Heinicus Mobile Mechanic
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,json,css,scss,less,html,xml,yml,yaml}]
indent_style = space
indent_size = 2

[*.{md,mdx}]
trim_trailing_whitespace = false
indent_size = 2

[*.{java,kt}]
indent_size = 4

[*.{swift,m,mm,h}]
indent_size = 4

[*.{gradle,gradle.kts}]
indent_size = 4

[Podfile]
indent_size = 2

[*.py]
indent_size = 4

[*.{bat,cmd}]
end_of_line = crlf

[Makefile]
indent_style = tab

[package.json]
indent_size = 2

[*.yml]
indent_size = 2